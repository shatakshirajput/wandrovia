<% layout('layouts/boilerplate') %>

    <style>
    .dashboard-hero {
        background-color: var(--forest-green);
        color: var(--off-white);
        padding: 3rem 2rem;
        border-radius: 1rem;
        text-align: center;
        margin-top: 2rem;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.4);
    }

    .dashboard-hero h1 {
        font-weight: bold;
        font-size: 2.5rem;
    }

    .dashboard-btn {
        margin-top: 1.5rem;
        font-size: 1.1rem;
        padding: 0.7rem 2rem;
        background-color: var(--charcoal-black);
        color: var(--off-white);
        border: none;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .dashboard-btn:hover {
        transform: translateY(-3px);
        background-color: var(--sand-beige);
        color: var(--charcoal-black);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
    }

    .listing-card {
        transition: all 0.3s ease;
    }

    .listing-card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .card img {
        border-right: 1px solid #e0e0e0;
    }

    .card:hover {
        transform: none;
        box-shadow: none;
    }
</style>

    <div class="container">
        <!-- Dashboard Hero Section -->
        <div class="dashboard-hero">
            <h1>Welcome to Your Host Dashboard</h1>
            <p class="lead mt-2">Manage your listings and add new stays for guests to explore.</p>
            <a href="/listings/new" class="dashboard-btn"> Add New Listing</a>
        </div>

        <!-- Existing Listings Section -->
        <% if (userListings && userListings.length> 0) { %>
            <h3 class="mt-5 mb-4 fw-bold text-center">Your Existing Listings</h3>
            <div class="d-flex flex-column gap-4 mb-5">

                <% userListings.forEach(listing=> { %>
                    <div class="card shadow-sm d-flex flex-row overflow-hidden rounded-4" style="min-height: 200px;">

                        <!-- Image -->
                        <div class="col-md-4" style="max-width: 300px;">
                            <img src="<%= listing.image.url %>" class="img-fluid h-100 object-fit-cover"
                                style="width: 100%; object-fit: cover;" alt="Listing image">
                        </div>

                        <!-- Content -->
                        <div class="col-md-8 p-4 d-flex flex-column justify-content-between">
                            <div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-1 fw-bold">
                                        <%= listing.title %>
                                    </h5>
                                </div>
                                <p class="text-muted mb-1">
                                    <%= listing.location %>
                                </p>
                                <p class="fst-italic">Owned by <%= listing.owner.username %>
                                </p>
                                <p>
                                    <%= listing.description.substring(0, 150) %>...
                                </p>
                                <p class="text-muted small">
                                    <% if (listing.category) { %>
                                        <%= listing.category %>
                                            <% } else { %>
                                                No tags available
                                                <% } %>
                                </p>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <span class="fw-semibold text-dark">&#8377;<%= listing.price.toLocaleString("en-IN") %>
                                        <span class="text-muted">/ night</span></span>
                                <div>
                                    <a href="/listings/<%= listing._id %>/edit"
                                        class="btn btn-sm btn-outline-dark me-2">Edit</a>
                                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST"
                                        class="d-inline">
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>

            <% } else { %>
                <p class="text-center mt-5 text-muted">You haven't added any listings yet. Start by adding your first
                    one!</p>
                <% } %>
    </div>